<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/transparent"
        card_view:cardElevation="0dp"
        android:layout_marginBottom="20dp"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_dark_background"
            android:padding="8dp">

        <ImageView
                android:id="@+id/activity_star_wars_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:layout_alignBaseline="@id/activity_star_wars_planet_name"
                android:background="@drawable/ic_planet_svgrepo_com"
                />

            <TextView
                android:id="@+id/activity_star_wars_planet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/activity_star_wars_image"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/cardview_light_background" />

            <ImageButton android:layout_width="wrap_content"
                android:id="@+id/activity_star_wars_items_button"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_next_black_24dp"
                android:layout_alignParentRight="true"
                android:background="@color/transparent"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                />


            <TextView
                android:id="@+id/activity_star_wars_planet_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_star_wars_planet_name"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/activity_star_wars_image"
                android:textColor="@color/cardview_light_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/activity_star_wars_planet_diameter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_star_wars_planet_population"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/activity_star_wars_image"
                android:paddingRight="15dp"
                android:textColor="@color/cardview_light_background"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>